<% @movies.each do |movie| %>
  <section class="movie">
    <div class="summary">
      <h2>
        <%= link_to movie.title, movie_path(movie.id) %>
      </h2>
      <h3>
        <%= movie.total_gross %>
      </h3>
      <p>
        <%= truncate_title(movie) %>
      </p>
    </div>
  </section>
<% end %>

<section class="admin">
  <%= link_to "Add new movie", new_movie_path, class: "button" %>
</section>